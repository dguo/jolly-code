{
    "name": "jolly-code",
    "description": "Website for listing funny programming projects",
    "version": "0.1.0",
    "main": "N/A",
    "scripts": {
        "format": "prettier --write \"./**/*.{css,html,json,md}\"",
        "format:check": "prettier --list-different \"./**/*.{css,html,json,md}\"",
        "lint": "yarn run lint:html && yarn run lint:css",
        "lint:css": "stylelint **/*.css",
        "lint:html": "htmlhint **/*.html",
        "start": "yarn install && live-server --no-browser public"
    },
    "repository": "https://github.com/dguo/jolly-code",
    "author": "Danny Guo",
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "htmlhint": "^0.11.0",
        "live-server": "1.2.1",
        "prettier": "^1.18.2",
        "stylelint": "^10.1.0",
        "stylelint-config-recommended": "^2.2.0"
    },
    "prettier": {
        "tabWidth": 4
    },
    "stylelint": {
        "extends": "stylelint-config-recommended"
    },
    "packageManager": "yarn@3.6.0"
}
